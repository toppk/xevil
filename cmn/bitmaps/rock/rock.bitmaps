Size Rock::get_size_max() {
  return context.heavyContext.fallingContext.movingContext.sizes[CO_air];
} 



PhysicalP Rock::create(void *,WorldP w,LocatorP l,const Pos &pos) {
  PhysicalP ret = new Rock(w,l,pos);
  assert(ret);
  return ret;
}



