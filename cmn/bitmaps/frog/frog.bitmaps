Size Frog::get_size_max() {
  return creatureContext.movingContext.physicalContext.sizeMax;
}



PhysicalP Frog::create(void *,WorldP w,LocatorP l,const Pos &pos) {
  PhysicalP ret = new Frog(w,l,pos);
  assert(ret);
  return ret;
}



